{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "allowJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": false
    },
    
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
